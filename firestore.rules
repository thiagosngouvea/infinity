rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read user data
      allow read: if isAuthenticated();
      // Users can update their own data, or admins can update anyone
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }
    
    // Events collection
    match /events/{eventId} {
      // Anyone authenticated can read events
      allow read: if isAuthenticated();
      // Only admins can create, update, or delete events
      allow write: if isAdmin();
    }
    
    // Event votes collection
    match /eventVotes/{voteId} {
      // Anyone authenticated can read votes
      allow read: if isAuthenticated();
      // Anyone authenticated can create a vote
      allow create: if isAuthenticated();
      // Users can update or delete their own votes
      allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }
    
    // Attendances collection
    match /attendances/{attendanceId} {
      // Anyone authenticated can read attendances
      allow read: if isAuthenticated();
      // Anyone authenticated can create an attendance (daily check-in)
      allow create: if isAuthenticated();
      // Only admins can update or delete attendances
      allow update, delete: if isAdmin();
    }
    
    // Raffles collection
    match /raffles/{raffleId} {
      // Anyone authenticated can read raffles
      allow read: if isAuthenticated();
      // Only admins can create or delete raffles
      allow create, delete: if isAdmin();
      // Anyone authenticated can update (to participate), admins can do anything
      allow update: if isAuthenticated();
    }
    
    // Notifications collection
    match /notifications/{notifId} {
      // Users can only read their own notifications
      allow read: if isAuthenticated() && request.auth.uid == resource.data.userId;
      // Users can update their own notifications (mark as read)
      allow update: if isAuthenticated() && request.auth.uid == resource.data.userId;
      // Anyone authenticated can create notifications
      allow create: if isAuthenticated();
      // Admins can delete notifications
      allow delete: if isAdmin();
    }
    
    // Items collection (Store)
    match /items/{itemId} {
      // Anyone authenticated can read items
      allow read: if isAuthenticated();
      // Only admins can create, update, or delete items
      allow write: if isAdmin();
    }
    
    // Redemptions collection (Store)
    match /redemptions/{redemptionId} {
      // Anyone authenticated can read redemptions
      allow read: if isAuthenticated();
      // Anyone authenticated can create a redemption (redeem an item)
      allow create: if isAuthenticated();
      // Only admins can update or delete redemptions (mark as delivered, cancel, etc)
      allow update, delete: if isAdmin();
    }
  }
}

